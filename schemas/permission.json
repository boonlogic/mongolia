{
  "$id": "https://gitlab.com/boonlogic/development/expert-api/api/amberv2/schemas/permission.json",
  "type": "object",
  "required": [
    "_id",
    "name",
    "tenant",
    "token",
    "access",
    "resource",
    "action"
  ],
  "properties": {
    "_id": {
      "type": "objectId"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_]*$",
      "maxLength": 64
    },
    "tenant": {
      "type": "objectId",
      "$ref": "/schemas/book.json"
    },
    "token": {
      "type": "string",
      "pattern": "^(\\+|\\-):([a-zA-Z0-9]|\\*):([a-zA-Z0-9]|\\*)$"
    },
    "access": {
      "type": "string",
      "enum": [
        "allow",
        "deny"
      ]
    },
    "resource": {
      "type": "string",
      "pattern": "^([a-zA-Z0-9]|\\*)$"
    },
    "action": {
      "type": "string",
      "pattern": "^([a-zA-Z0-9]|\\*)$"
    }
  },
  "additionalProperties": false
}
