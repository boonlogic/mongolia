---
"$id": https://gitlab.com/boonlogic/development/expert-api/api/amberv2/schemas/user.json
type: object
required:
  - _id
  - username
  - email
  - passwordHashed
properties:
  _id:
    type: objectId
    title: Mongo ObjectId
  username:
    type: string
    pattern: "^[a-zA-Z0-9-_]*$"
    maxLength: 64
    title: Username
  email:
    type: string
    format: email
    maxLength: 1024
    title: Email address
  superAdmin:
    type: boolean
    default: false
  tenancies:
    type: array
    item:
      type: object
      additionalProperties: false
      required:
        - tenant
        - role
      properties:
        tenant:
          type: objectId
          "$ref": "/schemas/tenant.json"
        role:
          type: objectId
          "$ref": "/schemas/role.json"
    default: []
  passwordHashed:
    type: string
additionalProperties: false
